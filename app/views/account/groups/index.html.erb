<div class="col-md-12">
  <table class="table">
    <thead>
      <tr>
        <td>#</td>
        <td>Title</td>
        <td>Description</td>
        <td>文章数量</td>
        <td>创建时间</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
      <tr>
        <td></td>
        <td><%= link_to(group.title, group_path(group))%></td>
        <td><%= group.description %></td>
        <td><%= group.posts.count %></td>
        <td><%= group.created_at%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
